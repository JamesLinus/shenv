#!/bin/bash

SHENV_HOME=/home/sathyam/shenv

if [ "$SHENV_HOME" == "" ]; then
    echo "Set the SHENV_HOME variable in the envrc file ..."
    return
fi

function envcreate()
{
    if [ -f $SHENV_HOME/$1-shenv.sh ]; then
        echo "Environment already exists. Skipping ..."
    else
        echo \
"#!/bin/bash

ENV_ROOT=\"$2\" # The root directory of the environment

envsetup

### Enter your aliases, functions, variables, etc below ###


### Enter cleanup code in the function below ###
function envend()
{
    ## Enter cleanup code here ##


    envend_super # This should be executed last
}

" > $SHENV_HOME/$1-shenv.sh
    fi
}

function envstart()
{
    if ls $SHENV_HOME/$1-shenv.sh >/dev/null 2>&1; then
        if ! type envend >/dev/null 2>&1; then
            ENV_NAME=$1
            . $SHENV_HOME/$1-shenv.sh
        fi
    fi
}

function envend_super()
{
    if type envend >/dev/null 2>&1; then
        unset envend

        cd $OLD_CWD
        unset OLD_CWD

        unset ENV_NAME
        unset ENV_ROOT

        PS1=$OLD_PS1
        unset OLD_PS1
        PATH=$OLD_PATH
        unset OLD_PATH

        unset -f chdir
        unalias cd  
    fi  
}

function envsetup()
{
    if ! type envend >/dev/null 2>&1; then   
        OLD_CWD=$PWD
        OLD_PS1=$PS1
        OLD_PATH=$PATH

        ### Place custom PS1 here ###
        PS1="\u@\h : \W\$ "

        PS1="($ENV_NAME)$PS1"

        function chdir {
            if [ "$1" == "" ]; then
                cd $ENV_ROOT
                PWD="/"
            else
                cd $1
            fi
        }
        alias cd='chdir'

        chdir
    fi
}